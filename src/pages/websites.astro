---
export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Professional Website Design & Development - Rankings Boost"
  description="Transform your business with stunning, conversion-optimized websites. Professional design, fast development, and guaranteed results. Built in New Zealand."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-white pt-24 pb-20">
      <div class="container">
        <!-- Status Bar -->
        <div class="flex justify-center mb-16">
          <div class="brutalist-border bg-white px-4 py-2">
            <div class="flex items-center space-x-4 text-mono text-sm">
              <span class="text-green-600 font-bold">LIVE</span>
              <span class="text-gray-600">PROFESSIONAL WEBSITES</span>
              <span class="text-blue-500 font-bold">NZ BUILT</span>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="max-w-4xl mx-auto">
          <!-- Main Headline -->
          <div class="text-center mb-12">
            <h1 class="text-display brutalist-text mb-8">
              BEST CONVERTING<br />
              <span style="color: var(--color-primary);">BUSINESS</span> WEBSITES
            </h1>
            
            <div class="bg-black text-white px-6 py-3 text-mono font-bold inline-block mb-8">
              [ HIGH-CONVERTING DESIGNS, FAST DELIVERY ]
            </div>
            
            <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
              Professional business websites designed to convert visitors into customers. 
              <strong>Proven designs, fast delivery, guaranteed results.</strong>
            </p>
          </div>

          <!-- CTA Section -->
          <div class="text-center mb-16">
            <div class="mb-8">
              <a href="#contact" class="btn btn-primary text-xl px-12 py-6 brutalist-text text-center min-w-[280px] shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-200">
                GET QUOTE
              </a>
            </div>
            
            <div class="flex flex-col sm:flex-row items-center justify-center space-y-2 sm:space-y-0 sm:space-x-8 text-sm text-gray-600">
              <div class="flex items-center">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                <span>Free quote</span>
              </div>
              <div class="flex items-center">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                <span>&lt;1 week delivery</span>
              </div>
              <div class="flex items-center">
                <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                <span>High-converting designs</span>
              </div>
            </div>
          </div>

          <!-- Stats Grid -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="card text-center hover:border-gray-300 transition-colors">
              <div class="text-mono text-sm text-gray-500 mb-2">DELIVERY TIME</div>
              <div class="text-3xl font-black text-gray-900 mb-1">&lt;1</div>
              <div class="text-sm text-gray-600">Week</div>
            </div>
            
            <div class="card text-center hover:border-gray-300 transition-colors">
              <div class="text-mono text-sm text-gray-500 mb-2">STARTING PRICE</div>
              <div class="text-3xl font-black mb-1" style="color: var(--color-primary);">$499</div>
              <div class="text-sm text-gray-600">3 pages</div>
            </div>
            
            <div class="card text-center hover:border-gray-300 transition-colors">
              <div class="text-mono text-sm text-gray-500 mb-2">DESIGNS</div>
              <div class="text-3xl font-black text-gray-900 mb-1">PRO</div>
              <div class="text-sm text-gray-600">Converting layouts</div>
            </div>
          </div>
        </div>

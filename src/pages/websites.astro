            <!-- Row 2 -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Pets Website -->
              <div class="card group hover:border-gray-300 transition-colors">
                <div class="aspect-[4/3] overflow-hidden rounded-lg mb-4">
                  <img 
                    src="/images/websites/Pets.png" 
                    alt="Pets Website" 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 portfolio-image"
                    draggable="false"
                    oncontextmenu="return false;"
                  />
                </div>
                <div class="text-center">
                  <h3 class="text-lg font-bold text-gray-900 mb-2">Pet Services</h3>
                </div>
              </div>
              
              <!-- HVAC Website -->
              <div class="card group hover:border-gray-300 transition-colors">
                <div class="aspect-[4/3] overflow-hidden rounded-lg mb-4">
                  <img 
                    src="/images/websites/HVAC.png" 
                    alt="HVAC Website" 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 portfolio-image"
                    draggable="false"
                    oncontextmenu="return false;"
                  />
                </div>
                <div class="text-center">
                  <h3 class="text-lg font-bold text-gray-900 mb-2">HVAC Services</h3>
                </div>
              </div>
            </div>
            
            <!-- Row 3 -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Real Estate Website -->
              <div class="card group hover:border-gray-300 transition-colors">
                <div class="aspect-[4/3] overflow-hidden rounded-lg mb-4">
                  <img 
                    src="/images/websites/Realestate.png" 
                    alt="Real Estate Website" 
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 portfolio-image"
                    draggable="false"
                    oncontextmenu="return false;"
                  />
                </div>
                <div class="text-center">
                  <h3 class="text-lg font-bold text-gray-900 mb-2">Real Estate Agency</h3>
                </div>
              </div>
              
              <!-- Cleaning Website -->
              <div class="card group hover:border-gray-300 transition-colors">
                <div class="aspect-[4/3] overflow-hidden rounded-lg mb-4">

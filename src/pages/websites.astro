    <!-- Pricing Section -->
    <section id="pricing" class="py-20 bg-gray-50">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <div class="text-mono text-sm text-gray-500 mb-4">[ PRICING ]</div>
            <h2 class="text-headline brutalist-text mb-6">

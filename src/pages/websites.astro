          <!-- Simple Process Steps -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Step 1 -->
            <div class="text-center">
              <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
                1
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3">Tell Us What You Need</h3>
              <p class="text-gray-600 text-sm">
                Contact us with your requirements. We'll give you a clear quote.
              </p>
            </div>
            
            <!-- Step 2 -->
            <div class="text-center">
              <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
                2
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3">We Build Your Pages</h3>
              <p class="text-gray-600 text-sm">
                We create your website pages using professional templates.
              </p>
            </div>
            
            <!-- Step 3 -->
            <div class="text-center">
              <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
                3
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3">You Get Your Website</h3>
              <p class="text-gray-600 text-sm">
                We deliver your website ready to go live on your hosting.
              </p>
            </div>
          </div>
        </div>
      </div>

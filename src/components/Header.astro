---
// Header component for Rankings Boost - Professional minimalist design
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <div class="w-8 h-8 bg-gray-900 flex items-center justify-center text-white text-mono font-bold text-sm">
            BS
          </div>
          <div class="flex flex-col">
            <span class="text-lg font-black text-gray-900 leading-none">
              RANKINGS BOOST
            </span>
            <span class="text-xs text-mono text-gray-600 uppercase tracking-wider">
              PROFESSIONAL
            </span>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <a href="#how-it-works" class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors duration-150">
          How It Works
        </a>
        <a href="#pricing" class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors duration-150">
          Pricing
        </a>
        <a href="#faq" class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors duration-150">
          FAQ
        </a>
        <div class="h-4 w-px bg-gray-300 mx-2"></div>
        <a href="#pricing" class="btn btn-primary">
          START
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="p-2 text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded focus:outline-none">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 py-4">
      <div class="flex flex-col space-y-1">
        <a href="#how-it-works" class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors duration-150">
          How It Works
        </a>
        <a href="#pricing" class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors duration-150">
          Pricing
        </a>
        <a href="#faq" class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors duration-150">
          FAQ
        </a>
        <div class="pt-2">
          <a href="#pricing" class="btn btn-primary w-full justify-center">
            START
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton?.addEventListener('click', function() {
      mobileMenu?.classList.toggle('hidden');
    });
    
    // Close mobile menu when clicking on links
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });
    
    // Close mobile menu when clicking outside
    document.addEventListener('click', function(e) {
      const target = e.target as Node;
      if (!mobileMenuButton?.contains(target) && !mobileMenu?.contains(target)) {
        mobileMenu?.classList.add('hidden');
      }
    });
  });
</script>
